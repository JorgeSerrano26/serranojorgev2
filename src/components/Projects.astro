---
import projects from "../data/projects.json";

const TAGS = {
    NEXT: {
        name: "Next.js",
        class: "bg-black text-white",
    },
    TAILWIND: {
        name: "Tailwind CSS",
        class: "bg-[#003159] text-white",
    },
};

type Project = {
    image: string,
    title: string,
    description: string,
    tags?: Tag[],
    link: string
}


type Tag = {
    class: string,
    name: string
}
---

{
    projects.map(({ image, title, description, tags, link }: Project) => (
        <article class="w-full mb-5">
            <a href={link} target="_blank" rel="noopener noreferrer">
                <h3 class="text-2xl font-semibold text-violet-200 mb-2 underline">{title}</h3>
                </a>
            <p class="text-lg mb-4 text-pretty">{description}</p>
            <!--  <ul class="flex gap-x-2 flex-row mb-2">
                {tags?.map((tag: Tag) => (
                    <li>
                        <span
                            class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}
                        >
                            <tag.icon class="size-4" />
                            {tag.name}
                        </span>
                    </li>
                ))}
            </ul>
            -->
            <img
                loading="lazy"
                class="rounded shadow-2xl shadow-white/10"
                src={`/projects/${image}.webp`}
                alt={`Captura de pantalla del proyecto ${image}`}
            />
        </article>
    ))
}
