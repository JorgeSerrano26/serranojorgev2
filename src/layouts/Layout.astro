---
import "../styles/base.scss";

type Props = {
    title?: string;
};

const { title } = Astro.props;

const pageTitle = title ?? "Jorge Serrano - Software Engineer";
---

<html lang="en-us">
    <head>
        <meta charset="utf-8" />
        <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <meta name="title" content={pageTitle} />
        <link rel="canonical" href="https://jorgeserrano.com.ar" />
        <meta
            name="description"
            content="Portfolio of Jorge Serrano, a software engineer at MercadoLibre and freelance. Passionate about exploring new technologies and digital innovation."
        />
        <meta
            name="keywords"
            content="software engineer, frontend, backend, fullstack, javascript, typescript, developer, portfolio,	react, next, nextjs, tailwind, astro, astrojs, css,		scss,		kotlin,		java,		go,		docker,		senior,		semi senior,		junior,		figma, web development, backend development, frontend development, web	"
        />
        <meta name="robots" content="index, follow" />
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="language" content="English" />
        <meta name="revisit-after" content="10 days" />
        <meta name="author" content="Jorge Serrano" />
        <meta http-equiv="content-language" content="en-us" />
        <title>{pageTitle}</title>

        <!--
            OG
         -->
        <meta property="og:type" content="business.business" />
        <meta property="og:title" content="Jorge Serrano - Software Engineer" />
        <meta property="og:url" content="https://jorgeserrano.com.ar" />
        <meta
            property="og:image"
            content="https://jorgeserrano.com.ar/favicon.ico"
        />
        <meta
            property="og:description"
            content="Portfolio of Jorge Serrano, a software engineer at MercadoLibre and freelance. Passionate about exploring new technologies and digital innovation."
        />
        <meta
            name="twitter:card"
            content="Portfolio of Jorge Serrano, a software engineer at MercadoLibre and freelance. Passionate about exploring new technologies and digital innovation."
        /></head
    >

    <body class="relative w-screen min-h-screen bg-[#0c0c0c] overflow-x-hidden">
        <main class="relative">
            <slot />
        </main>
    </body>
</html>
